{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src/",
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "ES2022",
    // "target": "ES6",
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "types": [
      "svelte",
      "node",
      "moment",
    ],
    // "useDefineForClassFields": true,
  },
  "include": [
    "**/*.ts",
    "**/*.svelte"
  ]
}
